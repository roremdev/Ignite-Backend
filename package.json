{
    "name": "server",
    "version": "0.0.0",
    "description": "Backend Infrastructure as Code with Terraform",
    "main": "src/index.js",
    "scripts": {
        "db:generate": "npx prismix && npx prisma format",
        "db:push": "npm run db:generate && npx prisma db push",
        "db:reset": "npm run db:generate && npx prisma migrate reset",
        "db:seed": "babel-node ./src/db/seeds/dev.seed.js",
        "db:migrate": "npx prisma migrate dev --name",
        "db:deploy": "npx prisma migrate deploy",
        "format": "npx prettier --write .",
        "dev": "nodemon ./src/index --exec babel-node",
        "build": "babel ./src -d ./dist/src",
        "start": "node src/index.js"
    },
    "dependencies": {
        "@babel/runtime": "7.19.0",
        "@prisma/client": "4.3.1",
        "bcrypt": "5.0.1",
        "chalk": "4.1.2",
        "cors": "2.8.5",
        "dayjs": "1.11.5",
        "dotenv": "16.0.2",
        "dotenv-expand": "9.0.0",
        "express": "4.18.1",
        "module-alias": "2.2.2",
        "prisma": "4.3.1"
    },
    "devDependencies": {
        "@babel/cli": "7.18.10",
        "@babel/core": "7.19.1",
        "@babel/node": "7.19.1",
        "@babel/plugin-transform-runtime": "7.19.1",
        "@babel/preset-env": "7.19.1",
        "babel-plugin-module-resolver": "4.1.0",
        "nodemon": "2.0.20",
        "prettier": "2.7.1",
        "prismix": "1.0.21"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Three-Points/LaRifamos-Backend.git"
    },
    "keywords": [
        "NodeJS",
        "ExpressJS",
        "PrismaORM"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Three-Points/LaRifamos-Backend/issues"
    },
    "homepage": "https://github.com/Three-Points/LaRifamos-Backend#readme",
    "engines": {
        "node": ">=14.x"
    },
    "_moduleAliases": {
        "@src": "./src",
        "@config": "./src/config",
        "@controllers": "./src/controllers",
        "@db": "./src/db",
        "@libs": "./src/libs",
        "@middlewares": "./src/middlewares",
        "@models": "./src/models",
        "@routes": "./src/routes",
        "@services": "./src/services",
        "@utils": "./src/utils",
        "@validators": "./src/validators"
    },
    "prisma": {
        "schema": "./prisma/schema.prisma",
        "seed": "babel-node ./src/db/seeds/index.seed.js"
    }
}
